{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 450,
    "data": {
      "url": "https://raw.githubusercontent.com/esoh0005/FIT3179_Assignment2_2023/main/Data/All_NewCleaned_WHI.csv"
    },
    "config": {
      "font": "Helvetica Neue, Arial",
      "axis": {
        "labelFont": "Helvetica Neue, Arial",
        "titleFont": "Helvetica Neue, Arial",
        "labelColor": "black",
        "titleColor": "black",
        "gridColor": "lighter",
        "labelFontSize": 12,
        "labelLimit": 500,
        "titleFontSize": 14
      },
      "lineBreak": "linebreak",
      "title": {"fontSize": 20, "font": "Helvetica Neue, Arial"},
      "style": {
        "guide-title": {"font": "Helvetica Neue, Arial", "fontSize": 14},
        "text": {
          "font": "Helvetica Neue, Arial",
          "fontSize": 19,
          "fontStyle": "Italic"
        },
        "legend": {
          "labelFont": "Helvetica Neue, Arial",
          "labelFontSize": 12,
          "titleFontSize": 14
        }
      }
    },
    "params": [
      {
        "name": "Year_selection",
        "value": 2019,
        "bind": {
          "input": "select",
          "options": [2021, 2022, 2023],
          "labels": ["2023"],
          "name": "Year Selection: "
        }
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Africa",
            "Asia",
            "Europe",
            "North America",
            "Australia",
            "South America"
          ],
          "labels": [
            "All",
            "Africa",
            "Asia",
            "Europe",
            "North America",
            "Australia",
            "South America"
          ],
          "name": "Continent: "
        }
      }
    ],
    "layer": [
      {
        "transform": [
          {"filter": "datum.happiness_score > 0"},
          {"filter": "datum.gdp_per_capita > 0"},
          {"filter": "Year_selection == null || datum.year == Year_selection"},
          {
            "filter": "Continent_selection == null || datum.continent == Continent_selection"
          },
          {
            "lookup": "country",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/chloechee1130/FIT3179_A2/main/json/ne_110m.json",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries"
                }
              },
              "key": "properties.NAME",
              "fields": ["properties.POP_EST"]
            }
          }
        ],
        "params": [
          {
            "name": "continent_highlight",
            "select": {"type": "point", "fields": ["continent"]},
            "bind": "legend"
          }
        ],
        "mark": "circle",
        "encoding": {
          "x": {
            "field": "happiness_score",
            "type": "quantitative",
            "title": "Hapiness Score",
            "axis": {"tickCount": 10},
            "scale": {"domain": [2, 8]}
          },
          "y": {
            "field": "gdp_per_capita",
            "type": "quantitative",
            "title": "Economy (GDP per Capita)",
            "scale": {"domain": [0, 1.8]}
          },
          "color": {
            "field": "continent",
            "type": "nominal",
            "title": "Continent",
            "legend": {
              "labelFont": "Helvetica Neue, Arial",
              "titleFont": "Helvetica Neue, Arial"
            },
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Australia"
              ],
              "range": [
                "#CBA048",
                "#FF8A70",
                "#6296BC",
                "#7DBCA9",
                "#989685",
                "#5F5C3B"
              ]
            }
          },
          "opacity": {
            "condition": {"param": "continent_highlight", "value": 0.8},
            "value": 0.1
          },
          "size": {
            "field": "properties.POP_EST",
            "type": "quantitative",
            "legend": {
              "labelFont": "Helvetica Neue, Arial",
              "titleFont": "Helvetica Neue, Arial",
              "format": ".3s"
            },
            "title": "Population",
              "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 20, 200, 400, 800, 1600]
            },
          },
          "tooltip": [
            {"field": "country", "type": "nominal", "title": "Country"},
            {"field": "continent", "type": "nominal", "title": "Continent"},
            {
              "field": "happiness_score",
              "type": "quantitative",
              "title": "Happiness Score",
              "format": ".2f"
            },
            {
              "field": "gdp_per_capita",
              "type": "quantitative",
              "title": "Economy (GDP per Capita)",
              "format": ".2f"
            },
            {
              "field": "properties.POP_EST",
              "type": "quantitative",
              "title": "Population"
            },
            {"field": "year", "type": "quantitative", "title": "Year"}
          ]
        }
      },
      {
        "transform": [
          {"filter": "datum.country == 'Luxembourg'"},
          {
            "calculate": "'All Western European countries have high economic production'",
            "as": "text_annotation"
          }
        ],
        "mark": {"type": "text", "fontWeight": "bold", "dx": 50, "dy": -210},
        "encoding": {
          "text": {"field": "text_annotation"},
          "color": {"value": "#4EBA74"}
        }
      },
      {
        "transform": [
          {
            "filter": {
              "field": "country",
              "oneOf": ["Malaysia", "Luxembourg", "Taiwan", "Haiti", "India"]
            }
          },
          {"filter": "Year_selection == null || datum.year == Year_selection"}
        ],
        "mark": {"type": "text", "dy": 15},
        "encoding": {
          "x": {"field": "happiness_score", "type": "quantitative"},
          "y": {"field": "gdp_per_capita", "type": "quantitative"},
          "text": {"field": "country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {"param": "continent_highlight", "value": 0.8},
            "value": 0.4
          }
        }
      },
      {
        "mark": {"type": "line", "color": "firebrick"},
        "transform": [
          {"filter": "Year_selection == null || datum.year == Year_selection"},
          {"regression": "gdp_per_capita", "on": "happiness_score"}
        ],
        "encoding": {
          "y": {"field": "gdp_per_capita", "type": "quantitative"},
          "x": {"field": "happiness_score", "type": "quantitative"}
        }
      }
    ]
  }