{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/esoh0005/FIT3179_Assignment2_2023/main/Data/Total_WorldHappinessIndex.csv"
    },
    "vconcat": [
      {
        "width": 600,
        "height": 300,
        "transform": [
          {
            "bin": {"step": 1, "extent": [1, 8]},
            "field": "Life Ladder",
            "as": "Happiness Score"
          }
        ],
        "mark": "area",
        "encoding": {
          "x": {
            "field": "year",
            "timeUnit": "year",
            "scale": {"domain": {"param": "time_brush"}},
            "axis": {"title": "", "tickCount": 5, "grid": false}
          },
          "y": {"aggregate": "count", "title": "Count of Happiness"},
          "color": {
            "field": "Happiness Score",
            "scale": {
              "range": [
                "#fdbe85",
                "#fcb570",
                "#faa85c",
                "#f89947",
                "#e6550d",
                "#bd0026",
                "#7f0000"
              ]
            },
            "legend": {
              "values": [1, 2, 3, 4, 5, 6, 7]
            }
                     
          }
        }
      },
      {
        "width": 600,
        "height": 60,
        "mark": "line",
        "params": [
          {
            "name": "time_brush",
            "select": {"type": "interval", "encodings": ["x"]}
          }
        ],
        "encoding": {
          "x": {
            "field": "year",
            "timeUnit": "year",
            "axis": {"title": "", "format": "%Y"}
          },
          "y": {
            "aggregate": "count",
            "axis": {"tickCount": 3, "grid": false},
            "title": "Count"
          }
        }
      }
    ]
  }