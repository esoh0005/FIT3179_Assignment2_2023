{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 450,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/chloechee1130/FIT3179_Homework4-W10/main/json/ne_110m.json",
      "format": {"type": "topojson", "feature": "countries"}
    },
    "config": {
      "font": "Helvetica Neue, Arial",
      "axis": {
        "labelFont": "Helvetica Neue, Arial",
        "titleFont": "Helvetica Neue, Arial",
        "labelColor": "black",
        "titleColor": "black",
        "gridColor": "lighter",
        "labelFontSize": 12,
        "labelLimit": 500,
        "titleFontSize": 14
      },
      "lineBreak": "linebreak",
      "title": {"fontSize": 20, "font": "Helvetica Neue, Arial"},
      "style": {
        "guide-title": {"font": "Helvetica Neue, Arial", "fontSize": 14},
        "text": {
          "font": "Helvetica Neue, Arial",
          "fontSize": 19,
          "fontStyle": "Italic"
        },
        "legend": {
          "labelFont": "Helvetica Neue, Arial",
          "labelFontSize": 12,
          "titleFontSize": 14
        }
      }
    },
    "params": [
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Australia"
          ],
          "labels": ["Show All", "North America"],
          "name": "Continent Selection: "
        }
      },
      {
          "name": "Year_selection",
          "value":2023,
          "bind": {
              "input": "range",
              "min": 2005,
              "max": 2023,
              "step": 1,
              "name": "Year: "
          }
      }
    ],
    "layer": [
      {"data": {"sphere": true}, "mark": {"type": "geoshape", "fill": "#e7feff"}},
      {
        "data": {
          "url": "https://raw.githubusercontent.com/chloechee1130/FIT3179_Homework4-W10/main/json/ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "lightslategray"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/chloechee1130/FIT3179_Homework4-W10/main/json/ne_110m.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "NoData"
          }
        ],
        "encoding": {"tooltip": {"field": "NoData"}}
      },
      {
      "data": {
        "url": "https://raw.githubusercontent.com/chloechee1130/FIT3179_Homework4-W10/main/json/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/esoh0005/FIT3179_Assignment2_2023/main/Data/NewCleaned_WHI.csv"
            },
            "key": "country",
            "fields": ["happiness_score", "continent", "year"]
          }
          },
          {"calculate": "datum.happiness_score", "as": "Happiness Score"},
          {
            "filter": "Continent_selection == null || datum.continent == Continent_selection"
          },
          {
            "filter": "datum.year == Year_selection" 
          }
        ],
        "layer": [
          {
            "mark": {"type": "geoshape", "stroke": "lightslategray"},
            "encoding": {
              "color": {
                "field": "Happiness Score",
                "type": "quantitative",
                "scale": {
                  "type": "threshold",
                  "domain": [2, 4, 6, 8],
                  "range": [
                    "#fdbe85",
                    "#fd8d3c",
                    "#e6550d",
                    "#a63603",
                    "#792600",
                    "#591C01"
                  ]
                },
                "legend": {
                  "direction": "horizontal",
                  "orient": "bottom",
                  "titleLimit": 1000,
                  "labelFontSize": 12,
                  "titleFontSize": 14
                }
              },
              "tooltip": [
                {
                  "field": "properties.NAME",
                  "type": "nominal",
                  "title": "Country"
                },
                {"field": "continent", "type": "nominal", "title": "Continent"},
                {
                  "field": "Happiness Score",
                  "type": "quantitative",
                  "format": ".2f",
                  "title": "Happiness Score"
                },
                {"field": "year", "type": "quantitative", "title": "Year"}
              ]
            }
          },
          {
            "data": {
              "url": "https://raw.githubusercontent.com/esoh0005/FIT3179_Assignment2_2023/main/Data/NewCleaned_WHI.csv"
            },
            "transform": [
              {
                "filter": "Continent_selection == null || datum.continent == Continent_selection"
              },
              {
                "filter": "datum.year == Year_selection" 
              },
              {
                "window": [{"op": "rank", "as": "ranking"}],
                "sort": [{"field": "happiness_score", "order": "descending"}]
              },
              {"filter": "datum.ranking == 1"},
              {
                "calculate": "'Happiest country in ' + datum.continent + ': ' + datum.country",
                "as": "text_annotation"
              }
            ],
            "layer": [
              {
                "mark": {
                  "type": "text",
                  "strokeWidth": 30,
                  "dy": 150,
                  "dx": 100,
                  "fontWeight": "bolder",
                  "fontStyle": "Italic",
                  "font": "Helvetica Neue, Arial"
                },
                "encoding": {
                  "text": {"field": "text_annotation"},
                  "color": {"value": "#591C01"}
                }
              }
            ]
          }
        ]
      }
    ]
  }