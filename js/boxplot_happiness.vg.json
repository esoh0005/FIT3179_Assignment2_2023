{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 450,
    "padding":{"left": 20, "top":0, "right":50,"bottom": 0},
    "data": {
      "url": "https://raw.githubusercontent.com/esoh0005/FIT3179_Assignment2_2023/main/Data/NewCleaned_WHI.csv"
    },
    "config": {
      "font": "Helvetica Neue, Arial",
      "axis": {
        "labelFont": "Helvetica Neue, Arial",
        "titleFont": "Helvetica Neue, Arial",
        "labelColor": "black",
        "titleColor": "black",
        "gridColor": "lighter",
        "labelFontSize": 12,
        "labelLimit": 500,
        "titleFontSize": 14
      },
      "lineBreak": "linebreak",
      "title": {"fontSize": 20, "font": "Helvetica Neue, Arial"},
      "style": {
        "guide-title": {"font": "Helvetica Neue, Arial", "fontSize": 14},
        "text": {
          "font": "Helvetica Neue, Arial",
          "fontSize": 19,
          "fontStyle": "Italic"
        },
        "legend": {
          "labelFont": "Helvetica Neue, Arial",
          "labelFontSize": 12,
          "titleFontSize": 14
        }
      }
    },
    "params": [
      {
      "name": "Year_selection",
      "value": 2023,
      "bind": {
        "input": "select",
        "options": [2006, 2007, 2008, 2009, 2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020, 2021, 2022, 2023],
        "labels": ["2006", "2007", "2008", "2009", "2010", "2011", "2012", "2013", "2014", "2015", "2016", "2017", "2018", "2019", "2020", "2021", "2022", "2023"],
        "name": "Year Selection: "
      }
  }
  
    ],
    "layer": [
      {
        "transform": [
          {"filter": "datum.happiness_score > 0"},
          {"filter": "Year_selection == null || datum.year == Year_selection"}
        ],
        "mark": {"type": "boxplot"},
        "encoding": {
          "x": {
            "field": "happiness_score",
            "type": "quantitative",
            "title": "Hapiness Score",
            "scale": {"zero": false}
          },
          "y": {"field": "continent", "type": "nominal", "title": null},
          "color": {
            "field": "continent",
            "type": "nominal",
            "title": "Continent",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Australia"
              ],
              "range": [
                "#1f77b4", 
                "#ff7f0e",  
                "#CBA048",  
                "#7DBCA9",  
                "#9467bd",  
                "#8c564b"   
              ]
            },
            "legend": null
          },
          "tooltip": [
            {"field": "country", "type": "nominal", "title": "Country"},
            {"field": "continent", "type": "nominal", "title": "Continent"},
            {
              "field": "happiness_score",
              "type": "quantitative",
              "title": "Happiness score",
              "format": ".2f"
            },
            {"field": "year", "type": "quantitative", "title": "Year"}
          ]
        }
      },
      {
        "transform": [
          {"filter": "datum.happiness_score > 0"},
          {"filter": "Year_selection == null || datum.year == Year_selection"},
          {
            "joinaggregate": [
              {"op": "mean", "field": "happiness_score", "as": "mean_hs"}
            ]
          },
          {"calculate": "format(datum.mean_hs, ',.2f')", "as": "MEAN_HS"}
        ],
        "mark": "rule",
        "encoding": {
          "x": {
            "aggregate": "mean",
            "field": "happiness_score",
            "type": "quantitative"
          },
          "color": {"value": "#c21807"},
          "size": {"value": 3},
          "tooltip": [
            {
              "field": "MEAN_HS",
              "title": "Average Happiness score",
              "format": ".2f"
            }
          ]
        }
      },
      {
        "transform": [
          {"filter": "datum.happiness_score > 0"},
          {"filter": "Year_selection == null || datum.year == Year_selection"},
          {
            "joinaggregate": [
              {"op": "mean", "field": "happiness_score", "as": "mean_hs"}
            ]
          },
          {"calculate": "format(datum.mean_hs, ',.2f')", "as": "MEAN_HS"},
          {
            "calculate": "'Average Happiness Score = ' + datum.MEAN_HS",
            "as": "text_annotation"
          }
        ],
        "mark": {"type": "text", "fontWeight": "bold", "dx": 20, "dy": -240},
        "encoding": {
          "text": {"field": "text_annotation"},
          "color": {"value": "#c21807"}
        }
      }
    ]
  }