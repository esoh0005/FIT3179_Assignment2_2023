{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/esoh0005/FIT3179_Assignment2_2023/main/js/ne_110m_admin_0_countries.topojson",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "config": {
        "view": {
           "stroke": "transparent"
        }
    },
    "width": 1250,
    "height": 650,
    "params": [
      {
        "name": "Region_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Western Europe",
            "Central and Eastern Europe",
            "East Asia",
            "South Asia",
            "Southeast Asia",
            "Latin America and Caribbean",
            "North America and ANZ",
            "Commonwealth of Independent States",
            "Middle East and North Africa",
            "Sub-Saharan Africa"
          ],
          "labels": ["Show All", "Western Europe"],
          "name": "Region Selection:"
        }
      },
      {
        "name": "zoom_level",
        "value": 210,
        "bind": {
          "input": "range",
          "min": 210,
          "max": 1000,
          "step": 10,
          "name": "Zoom: "
        }
      },
      {
        "name": "center_to",
        "value": [0, 0],
        "bind": {
          "input": "select",
          "options": [
            [0, 0],
            [0, 50],
            [15, 50],
            [120, 30],
            [80, 25],
            [110, 5],
            [-70, -10],
            [-110, 50],
            [20, 10],
            [-70, -20],
            [145, -25]
          ],
          "labels": [
            "Reset",
            "Western Europe",
            "Central and Eastern Europe",
            "East Asia",
            "South Asia",
            "Southeast Asia",
            "Latin America and Caribbean",
            "North America",
            "Africa",
            "South America",
            "ANZ"
          ],
          "name": "Map Positioning: "
        }
      }
    ],
    "projection": {
      "type": "equalEarth",
      "center": {"expr": "center_to"},
      "scale": {"expr": "zoom_level"}
    },
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/esoh0005/FIT3179_Assignment2_2023/main/js/oceans.topojson",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "skyblue"},
        "projection": {
          "type": "equalEarth",
          "center": {"expr": "center_to"},
          "scale": {"expr": "zoom_level"}
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/esoh0005/FIT3179_Assignment2_2023/main/js/ne_110m_graticules_30.topojson",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_graticules_30"
          }
        },
        "mark": {
          "type": "geoshape",
          "stroke": "aliceblue",
          "strokeWidth": 0.8,
          "fill": null
        },
        "projection": {
          "type": "equalEarth",
          "center": {"expr": "center_to"},
          "scale": {"expr": "zoom_level"}
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/esoh0005/FIT3179_Assignment2_2023/main/js/ne_110m_admin_0_countries.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "transform": [
          {"calculate": "'No data on ' + datum.properties.NAME", "as": "note"}
        ],
        "projection": {
          "type": "equalEarth",
          "center": {"expr": "center_to"},
          "scale": {"expr": "zoom_level"}
        },
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/esoh0005/FIT3179_Assignment2_2023/main/Data/Region_Compiled_WHI_Data.csv"
              },
              "key": "Country",
              "fields": ["Ladder_score", "Regional indicator"]
            }
          },
          {
            "filter": "Region_selection == null || datum['Regional indicator'] == Region_selection"
          }
        ],
        "layer": [
          {
            "mark": {
              "type": "geoshape",
              "stroke": "aliceblue",
              "strokeWidth": 0.8
            },
            "encoding": {
              "color": {
                "field": "Ladder_score",
                "type": "quantitative",
                "scale": {
                  "type": "threshold",
                "domain": [2, 3, 4, 5, 6, 7],
                "range": [
                  "#fde725",
                  "#d9ef8b",
                  "#a7e979",
                  "#66bd63",
                  "#1a9850",
                  "#006837",
                  "#004529"]
                },
                "legend": {
                "direction": "horizontal",
                "orient": "bottom-right",
                "titleLimit": 1000,
                "labelFontSize": 12,
                "titleFontSize": 14,
                "offset": 0
              },
                "title": "Happiness Score"
              },
              
              "tooltip": [
                {
                  "field": "properties.NAME",
                  "type": "nominal",
                  "title": "Country"
                },
                {
                  "field": "Regional indicator",
                  "type": "nominal",
                  "title": "Region"
                },
                {
                  "field": "Ladder_score",
                  "type": "quantitative",
                  "title": "Happiness Score",
                  "format": ".2f"
                }
              ]
            }
          },
          {
            "data": {
              "url": "https://raw.githubusercontent.com/2311ajay/FIT3179-Vega-Lite/main/data/world-happiness-report-with-latLong.csv"
            },
            "encoding": {
              "longitude": {"field": "longitude", "type": "quantitative"},
              "latitude": {"field": "latitude", "type": "quantitative"}
            },
            "transform": [
              {
                "filter": "Region_selection == null || datum['Regional indicator'] == Region_selection"
              },
              {
                "window": [{"op": "rank", "as": "ranking"}],
                "sort": [{"field": "Ladder score", "order": "descending"}]
              },
              {"filter": "datum.ranking == 1"},
              {
                "calculate": "Region_selection ? 'Happiest country in ' + datum['Regional indicator'] + ' is ' + datum.Country : 'Happiest country in the world is ' + datum.Country",
                "as": "text_annotation"
              }
            ],
            "layer": [
              {
                "data": {
                  "url": "https://raw.githubusercontent.com/esoh0005/FIT3179_Assignment2_2023/main/js/ne_110m_admin_0_boundary_lines_land.topojson",
                  "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_boundary_lines_land"
                  }
                },
                "mark": {"type": "geoshape", "fill": null, "stroke": "gray"}
              },
              {
                "mark": {
                  "type": "text",
                  "fill":"#FFA75E",
                  "fontWeight": "bold"
                },
                "encoding": {
                  "text": {"field": "text_annotation"},
                  "size": {"value": 24}
                }
              }
            ]
          }
        ]
      }
    ]
  }